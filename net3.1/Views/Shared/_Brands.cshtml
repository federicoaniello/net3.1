@model List<Brand>




<main id="brands-carousel">
    <h3 class="text-center">Rivenditore Ufficiale di</h3>
    <div class="container-md">
    <div class="py-5 px-1 swiper brands-list">

        <div class="brands swiper-wrapper">
            @foreach (Brand prod in Model)
            {
                <div class="product swiper-slide">
                    <img class="swiper-lazy" data-src="/images/brands/@(prod.Img)">
                </div>
            }
        </div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
    </div>
    </div>
</main>
