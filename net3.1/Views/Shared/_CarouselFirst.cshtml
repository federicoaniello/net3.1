@model List<CarouselFirst>


<div id="carouselFirst" class="carousel slide" data-bs-touch="true" data-bs-ride="carousel">

  <div class="carousel-inner">
        @for (int i = 0; i < Model.Count; i++)
        {
                <picture class="carousel-item @(i == 0 ? "active" : "")">
                <source srcset="/images/gallery/@(Model[i].Image)" media="(min-width: 768px)" />
                <img draggable="false" src="/images/gallery/@(Model[i].ImageMobile)" alt="" />
                </picture>

        }
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselFirst" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselFirst" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
    <div class="carousel-indicators">
    @for (int i = 0; i < @Model.Count; i++)
    {
                    <button type="button" data-bs-target="#carouselFirst" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="true" aria-label="Slide @(i)"></button>
    }
  </div>
</div>