@model List<Product>
<main>
<h3 class="text-center">Prodotti in vetrina</h3>
    @foreach (Product prod in Model)
    {
        <div class="product">
            <img src="/images/products/@(prod.Img)">
            <div class="info d-flex flex-column justify-content-center">
                <h6>@prod.Name</h6>
                <h5 class="font-weight-bold">@prod.Category</h5>
                <h5>@(prod.Description)</h5>
                <p>@prod.Price</p>
            </div>
        </div>
    }

</main>


